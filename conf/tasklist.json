{
    "tasklist" : [
        {
            "name" : "date",
            "type" : "subprocess",
            "description" : "Get the current date and time",
            "singleton" : false,
            "conflict" : [ "sleep" ],
            "command" : [ "sh", "-c", "date" ],
            "schedule" : [
                [1, "minute", ":05"],
                [7, "seconds" ]
            ]
        },
        
        {
            "name" : "echo",
            "type" : "subprocess",
            "description" : "Echoes input argument",
            "singleton" : false,
            "args" : [
                {
                    "name" : "input",
                    "type" : "str",
                    "description" : "Text to echo",
                    "default" : "Hello, world!"
                }
            ],
            "[command]" : [ "echo", "${input}" ]
        },
        
        {
            "name" : "echo_2",
            "type" : "subprocess",
            "[[singleton]]" : "bool(0)",
            "[command]" : [ "echo", "$[CONFIGPATH]" ]
        },
        
        {
            "name" : "sleep",
            "type" : "subprocess",
            "description" : "Pause execution for n seconds",
            "singleton" : true,
            "conflict" : [ "sleep2" ],
            "[command]" : [ "sleep", "${delay}" ],
            "args" : [
                {
                    "name" : "delay",
                    "type" : "float",
                    "description" : "Time to sleep (seconds)",
                    "default" : 15.0
                }
            ]
        },
        
        {
            "name" : "sleep2",
            "type" : "subprocess",
            "description" : "Pause execution for n seconds",
            "singleton" : false,
            "conflict" : [ "sleep" ],
            "[command]" : [ "sleep", "${delay}" ],
            "args" : [
                {
                    "name" : "delay",
                    "type" : "int",
                    "description" : "Time to sleep (seconds)",
                    "default" : 30.0
                }
            ]
        }
    ]
}