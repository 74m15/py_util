{
    "tasklist" : [
        {
            "name" : "date",
            "type" : "subprocess",
            "description" : "Get the current date and time",
            "singleton" : true,
            "conflict" : [ "sleep" ],
            "command" : [ "sh", "-c", "date" ],
            "schedule" : [
                [1, "minute", ":05"],
                [7, "seconds" ]
            ]
        },
        
        {
            "name" : "echo",
            "type" : "subprocess",
            "description" : "Echoes input argument",
            "singleton" : false,
            "args" : [
                {
                    "name" : "input",
                    "type" : "str",
                    "description" : "Text to echo",
                    "default" : "Hello, world!"
                }
            ],
            "[command]" : [ "echo", "${input}" ]
        },
        
        {
            "name" : "echo_2",
            "type" : "subprocess",
            "[[singleton]]" : "bool(1)",
            "[command]" : [ "echo", "$[CONFIGPATH]" ]
        }
    ]
}